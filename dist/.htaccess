# Activar reescritura de URLs
RewriteEngine On

# Redirigir todas las peticiones hacia el index.html (para aplicaciones SPA de React)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ /index.html [L]

# Forzar el uso de HTTPS (si el sitio tiene habilitado SSL)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Habilitar la compresión GZIP para archivos de texto, CSS y JavaScript
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css application/javascript application/json application/xml application/xml+rss text/javascript
</IfModule>

# Habilitar el almacenamiento en caché para archivos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # Archivos de imagen
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"

  # Archivos CSS y JS
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"
</IfModule>

# Habilitar el control de acceso a través de cabeceras (para evitar clickjacking y XSS)
<IfModule mod_headers.c>
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Content-Type-Options "nosniff"
</IfModule>

# Deshabilitar la indexación de archivos sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|conf)$">
  Order Deny,Allow
  Deny from all
</FilesMatch>
